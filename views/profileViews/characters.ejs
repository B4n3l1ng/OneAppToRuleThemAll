<body class="charactersBackground">
  <nav>
    <a href="/profile">Back to the Prancing Pony</a>
    <a href="/characters/new">Create a new character!</a>
    <a href="/profile/shop">Visit Eginhard's Emporium</a>
    <a href="/profile/inventory">Take stock of your supplies!</a>
    <a href="/profile/dealer">Talk to the Dealer</a>
    <a href="/profile/wealth">Head to Bodrig's Bank</a>
    <a href="/profile/explore">Explore Middle-earth!</a>
  </nav>
  <div class="box">
    <div class="pageText">
      <% characters.forEach(element => { %>

      <h1><%= element.name %></h1>
      <div class="listImage">
        <img
          src="<%= element.image %>"
          alt="<%= element.name %>'s Image"
          class="characterImg"
        />
      </div>
      <div class="characterButtons">
        <a href="/characters/<%= element.id %>/details" class="whiteButton"
          ><%= element.name %>'s Details</a
        >
        <a href="/characters/<%= element.id %>/update" class="whiteButton"
          >Change <%= element.name %>'s Details</a
        >
        <a href="/characters/<%= element.id %>/delete" class="whiteButton"
          >Delete <%= element.name %></a
        >
      </div>
      <% }) %>
    </div>
  </div>
</body>
