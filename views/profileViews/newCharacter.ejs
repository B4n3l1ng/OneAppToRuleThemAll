<div>
  <h2>Create a new character!</h2>
  <form action="/characters/new" method="POST">
    <label>Name:<input type="text" required name="name" /></label>
    <label>Species:</label>
    <select name="species" required>
      <option value="Human">Human</option>
      <option value="Elf">Elf</option>
      <option value="Orc">Orc</option>
      <option value="Ent">Ent</option>
      <option value="Wizard">Wizard</option>
      <option value="Dwarf">Dwarf</option>
      <option value="Hobbit">Hobbit</option>
    </select>
    <label>Gender:</label>
    <select name="gender" required>
      <option value="Male">Male</option>
      <option value="Female">Female</option>
    </select>
    <label>Occupation: <input type="text" name="occupation" required /></label>
    <label>Allegiance: <input type="text" name="allegiance" required /></label>
    <label>Weapon of choice:</label>
    <select name="weapons">
      <option value="Longsword">You have my longsword!</option>
      <option value="Bow">And my bow!</option>
      <option value="Short Sword">Short Sword</option>
      <option value="Staff">Staff</option>
      <option value="Axe">...And my axe!</option>
    </select>
    <button type="submit">Hop into Middle Earth!</button>
  </form>
</div>
